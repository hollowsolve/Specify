# Specify Backend Environment Variables for Production
# Copy this file to .env for deployment

# Required: Anthropic API key for AI processing
SPECIFY_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# CORS Configuration - Add your frontend domain here
SPECIFY_CORS_ORIGINS=https://your-frontend.vercel.app,https://www.your-domain.com

# Optional: Environment mode
SPECIFY_ENVIRONMENT=production

# Optional: Allowed hosts for security
SPECIFY_ALLOWED_HOSTS=your-backend.railway.app

# Optional: Custom configuration
SPECIFY_DEBUG=false
SPECIFY_LOG_LEVEL=INFO
SPECIFY_HOST=0.0.0.0
SPECIFY_PORT=8000

# Optional: Session settings
SPECIFY_SESSION_TIMEOUT_MINUTES=30
SPECIFY_MAX_SESSIONS_PER_USER=10

# Optional: Rate limiting
SPECIFY_RATE_LIMIT_ENABLED=true
SPECIFY_RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Optional: Processing settings
SPECIFY_MAX_PARALLEL_AGENTS=4
SPECIFY_ENABLE_PARALLEL_EXECUTION=true
SPECIFY_ANALYSIS_TIMEOUT_SECONDS=300
SPECIFY_SPECIFICATION_TIMEOUT_SECONDS=600
SPECIFY_REFINEMENT_TIMEOUT_SECONDS=300
SPECIFY_DISPATCH_TIMEOUT_SECONDS=1800

# Optional: File upload settings
SPECIFY_MAX_FILE_SIZE_MB=50
SPECIFY_ALLOWED_FILE_TYPES=.txt,.md,.json,.yaml,.yml

# Optional: Database URL (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Redis URL (for session storage)
# SPECIFY_REDIS_URL=redis://localhost:6379
# SPECIFY_REDIS_ENABLED=false